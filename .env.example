# Django Settings
DEBUG=True
SECRET_KEY=your-secret-key-here
ALLOWED_HOSTS=localhost,127.0.0.1

# Database
POSTGRES_DB=floreria_cristina
POSTGRES_USER=floradmin
POSTGRES_PASSWORD=florpassword

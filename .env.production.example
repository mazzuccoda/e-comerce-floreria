# ============================================================================
# VARIABLES DE ENTORNO PARA RAILWAY (PRODUCCIÓN)
# ============================================================================
# Copia estas variables en Railway → Variables
# Reemplaza los valores entre < > con tus datos reales
# ============================================================================

# Django Core
DEBUG=False
SECRET_KEY=<GENERA_UNA_CLAVE_SECRETA_AQUI>
ALLOWED_HOSTS=floreriayviverocristian.up.railway.app,e-comerce-floreria-production.up.railway.app

# Database (Railway PostgreSQL)
DATABASE_URL=<RAILWAY_PROPORCIONA_ESTO_AUTOMATICAMENTE>

# Email Configuration (SMTP Gmail)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=<TU_EMAIL@gmail.com>
EMAIL_HOST_PASSWORD=<TU_APP_PASSWORD_DE_16_CARACTERES>
DEFAULT_FROM_EMAIL=Florería Cristina <<TU_EMAIL@gmail.com>>

# Redis (Railway Redis)
REDIS_URL=<RAILWAY_PROPORCIONA_ESTO_AUTOMATICAMENTE>
CELERY_BROKER_URL=<RAILWAY_PROPORCIONA_ESTO_AUTOMATICAMENTE>

# Cloudinary (para imágenes)
CLOUDINARY_CLOUD_NAME=<TU_CLOUD_NAME>
CLOUDINARY_API_KEY=<TU_API_KEY>
CLOUDINARY_API_SECRET=<TU_API_SECRET>

# MercadoPago
MERCADOPAGO_ACCESS_TOKEN=<TU_ACCESS_TOKEN>
MERCADOPAGO_PUBLIC_KEY=<TU_PUBLIC_KEY>

# Security (Producción)
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True

# Twilio (Opcional - para WhatsApp)
TWILIO_ACCOUNT_SID=<TU_ACCOUNT_SID>
TWILIO_AUTH_TOKEN=<TU_AUTH_TOKEN>
TWILIO_WHATSAPP_NUMBER=<TU_NUMERO_WHATSAPP>

